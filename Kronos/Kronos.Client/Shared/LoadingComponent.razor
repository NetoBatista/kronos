@if (Visible)
{
    @if (IsInLineProgress)
    {
        <div class="loader-inline" style=@Style></div>
    }
    else 
    {
        <div class="loader-circle" style=@Style></div>
    }
}

@code {
    [Parameter] 
    public bool Visible { get; set; } = true;
    [Parameter]
    public string Style { get; set; } = string.Empty;
    [Parameter]
    public bool IsInLineProgress { get; set; } = false;
}